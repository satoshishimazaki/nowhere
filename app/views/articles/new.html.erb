<% provide(:title, 'post') %>
<h1>投稿</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@article, :html => {:multipart => true}) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :herenowtitle %>
      <%= f.select :herenowtitle, ['旬', 'お得'], { include_blank: '選択してください' }, class: 'herenow' %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :dead_line %>
      <%= f.datetime_local_field :dead_line %>

      <%= f.label :article_images, "画像" %>
      <%= f.fields_for :article_images do |images_form| %>
        <%= images_form.label :image %>
        <%= images_form.file_field 'image[0]' %>
        <%= images_form.label :image %>
        <%= images_form.file_field 'image[1]' %>
        <%= images_form.label :image %>
        <%= images_form.file_field 'image[2]' %>
      <% end %>

      <%= f.submit "Post my acrticle", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>