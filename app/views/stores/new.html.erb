<% provide(:title, 'Sign up') %>
<div class="storesign">
<h1>登録画面</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@store) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "会社名" %>
      <%= f.text_field :name %>

      <%= f.label :category, "種別" %>
      <%= f.select :category, ['飲食', 'shopping','その他'], { include_blank: '選択してください' }, class: 'category' %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email %>

      <%= f.label :address, "住所" %>
      <%= f.text_field :address %>

      <%= f.label :tel, "電話番号" %>
      <%= f.telephone_field :tel %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "登録", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>